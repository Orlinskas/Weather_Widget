<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment_widget_sv"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground">

<RelativeLayout
    android:id="@+id/fragment_widget_rl"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="@color/colorPrimary">

    <RelativeLayout
        android:id="@+id/fragment_widget_rl_control_bar_bot"
        android:layout_width="match_parent"
        android:layout_height="27dp"
        android:layout_below="@+id/fragment_widget_rl_chart_case">

        <ImageButton
            android:id="@+id/fragment_widget_btn_left"
            style="@style/Widget.AppCompat.ImageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="2dp"
            android:background="@color/colorPrimary"
            android:tint="@color/colorAccent"
            app:srcCompat="@drawable/ic_left" />

        <TextView
            android:id="@+id/fragment_widget_tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:maxLines="1"
            android:text="2077:01:22"
            android:textColor="@color/colorTextBlack"
            android:textSize="16sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/fragment_widget_btn_right"
            style="@style/Widget.AppCompat.ImageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="@color/colorPrimary"
            android:filterTouchesWhenObscured="true"
            android:tint="@color/colorAccent"
            app:srcCompat="@drawable/ic_right" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/fragment_widget_rl_chart_case"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@+id/fragment_widget_rl_icons_case">
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/fragment_widget_rl_icons_case"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:background="@color/colorPrimary">
        </RelativeLayout>

    <ProgressBar
        android:id="@+id/fragment_widget_pb"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/fragment_widget_tv_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/fragment_widget_rl_chart_case"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:maxLines="1"
        android:text="Country"
        android:textColor="@color/colorTextLabel"
        android:textSize="16sp"
        android:textStyle="bold" />


</RelativeLayout>

</ScrollView>