                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:maxLength="5"
                android:text="@string/empty_row"
                android:textAlignment="center"
                android:textColor="@color/colorWidgetTextTemp"
                android:textSize="12sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/layout_widget_ll_chart_case_date_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:maxLength="5"
                android:text="@string/empty_row"
                android:textAlignment="center"
                android:textColor="@color/colorWidgetTextDate"
                android:textSize="12sp"
                android:textStyle="bold" />
