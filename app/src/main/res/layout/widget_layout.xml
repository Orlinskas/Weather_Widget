    <RelativeLayout
        android:id="@+id/layout_widget_rl_control_bar_bot"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_below="@+id/layout_widget_ll_chart_case">

        <ImageView
            android:id="@+id/layout_widget_iv_left"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_marginStart="5dp"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:alpha="0.8"
            android:contentDescription="@string/left_button"
            app:srcCompat="@drawable/ic_left_4" />

        <ImageView
            android:id="@+id/layout_widget_iv_right"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="1dp"
            android:alpha="0.8"
            android:contentDescription="@string/right_button"
            app:srcCompat="@drawable/ic_right_4" />

        <TextView
            android:id="@+id/layout_widget_tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:maxLines="1"
            android:shadowColor="@color/colorWidgetShadow"
            android:shadowDx="2"
            android:shadowRadius="1"
            android:text="@string/tv_date"
            android:textColor="@color/colorWidgetTextTemp"
            android:textSize="14sp"
            android:textStyle="bold"
            tools:ignore="RelativeOverlap" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/layout_widget_ll_click_area"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Button
            android:id="@+id/layout_widget_btn_left_click_area"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:alpha="0"
            tools:ignore="ButtonStyle" />

        <Button
            android:id="@+id/layout_widget_btn_right_click_area"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:alpha="0"
            tools:ignore="ButtonStyle" />
    </LinearLayout>

</RelativeLayout>
