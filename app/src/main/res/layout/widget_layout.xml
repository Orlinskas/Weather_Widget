                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fontFamily="sans-serif-medium"
                android:maxLength="5"
                android:text="@string/empty_row"
                android:textAlignment="center"
                android:textColor="@color/colorWidgetTextTemp"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/layout_widget_ll_chart_case_icon_1"
                android:layout_width="match_parent"
                android:layout_height="18dp"
                android:layout_gravity="center_horizontal"
                android:contentDescription="@string/icon_info"
                app:srcCompat="@drawable/ic_803" />

            <TextView
                android:id="@+id/layout_widget_ll_chart_case_date_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:maxLength="5"
                android:text="@string/empty_row"
                android:textAlignment="center"
                android:textColor="@color/colorWidgetTextDate"
                android:textSize="12sp" />
        </LinearLayout>

